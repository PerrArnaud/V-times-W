{% block title %}Nos Engagements{% endblock %}

{% block body %}
<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <h1 class="text-center mb-5">Nos Engagements</h1>
            
            <div class="card border-success shadow-sm mb-4">
                <div class="card-body">
                    <div class="d-flex align-items-start">
                        <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" fill="currentColor" class="bi bi-recycle text-success me-3 flex-shrink-0" viewBox="0 0 16 16">
