                    <td>{{ preOrder.dateCreation|date('d/m/Y √† H:i') }}</td>
                </tr>
                <tr>
                    <th>Statut</th>
                    <td>{{ preOrder.statut }}</td>
                </tr>
            </table>
            
            {% if preOrder.message %}
            <h3 style="color: #198754; margin-top: 25px;">Message du client</h3>
            <div style="background-color: #f8f9fa; padding: 15px; border-radius: 5px; border-left: 4px solid #0d6efd;">
                <p style="margin: 0;">{{ preOrder.message }}</p>
            </div>
            {% endif %}
            
            <div class="alert">
                <p style="margin: 0;"><strong>‚ö†Ô∏è Action requise :</strong> Contactez le client sous 48h pour organiser le retrait.</p>
            </div>
            
            <p style="margin-top: 25px;"><strong>Stock restant :</strong> {{ preOrder.produit.quantity }} unit√©(s)</p>
        </div>
        
        <div class="footer">
            <p style="margin: 5px 0;">Email automatique - V-Times Admin</p>
            <p style="margin: 5px 0;">{{ "now"|date('d/m/Y √† H:i') }}</p>
        </div>
    </div>
</body>
</html>
