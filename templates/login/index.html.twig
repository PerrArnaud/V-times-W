{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="text-center mb-0">Connexion</h3>
                </div>
                <div class="card-body">
                    <div id="error-message" class="alert alert-danger d-none"></div>
                    
                    {{ form_start(form, {'attr': {'id': 'login-form'}}) }}
                        <div class="mb-3">
                            {{ form_row(form.username) }}
                        </div>
                        <div class="mb-3">
                            {{ form_row(form.password) }}
                        </div>
                        <div class="d-grid">
                            {{ form_row(form.submit) }}
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const form = document.getElementById('login-form');
    const errorDiv = document.getElementById('error-message');
    
    form.addEventListener('submit', async function(e) {
        e.preventDefault();
        
        // Récupérer les valeurs du formulaire
        const formData = new FormData(form);
        const username = formData.get('login[username]');
        const password = formData.get('login[password]');
        
        // Masquer les erreurs précédentes
        errorDiv.classList.add('d-none');
        
        try {
            const response = await fetch('/api/login_check', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                    username: username,
                    password: password
                })
            });
            
            const data = await response.json();
            
            if (response.ok) {
                // Stocker le token JWT
                sessionStorage.setItem('jwt_token', data.token);
                
                // Rediriger vers la page d'accueil ou dashboard
                window.location.href = '/';
            } else {
                // Afficher l'erreur
                errorDiv.textContent = data.message || 'Identifiants invalides';
                errorDiv.classList.remove('d-none');
            }
        } catch (error) {
            errorDiv.textContent = 'Une erreur est survenue. Veuillez réessayer.';
            errorDiv.classList.remove('d-none');
        }
    });
});
</script>
{% endblock %}
