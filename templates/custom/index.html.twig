{% extends 'base.html.twig' %}

{% block title %}Personnalisation - V-Times{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0">
                        <i class="bi bi-palette"></i> Personnalisez votre horloge
                    </h2>
                </div>
                <div class="card-body p-4">
                    {% for message in app.flashes('success') %}
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="bi bi-check-circle"></i> {{ message }}
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    {% endfor %}

                    <p class="lead mb-4">
                        Créez votre horloge vinyle unique en sélectionnant vos options préférées.
                    </p>

                    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                        
                        <div class="mb-4">
                            {{ form_row(form.cadran) }}
                        </div>

                        <div class="mb-4">
                            {{ form_row(form.aiguille) }}
                        </div>

                        <div class="mb-4">
                            {{ form_row(form.chiffres) }}
                        </div>

                        {{ form_row(form.submit) }}

                    {{ form_end(form) }}
                </div>
            </div>

            <div class="mt-4 text-center">
                <a href="{{ path('app_products') }}" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Retour aux produits
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
